//Segunda Fase
void mapa2(char matriz2[20][20], int x2, int y2, char chave2, char porta2, char botao2, int XY2, int XX2, char espinho2) {
    system("color 0C");
    int i, j;

    for (i = 0; i < 20; i++) {
        for (j = 0; j < 20; j++) {
            if (i == XY2 && j == XX2) {
                matriz2[i][j] = 'V';
            } else if (i == y2 && j == x2) {
                matriz2[i][j] = '&';
            } else if (i == 0 && j == 15) {
                matriz2[i][j] = porta2;
            } else if (i == 13 && j == 9) {
                matriz2[i][j] = botao2;
            } else if (i == 7 && j == 7) {
                matriz2[i][j] = chave2;
            } else if (i == 0 || i == 19) {
                matriz2[i][j] = '*';
                printf("\n");
            } else if (j == 0 || j == 19) {
                matriz2[i][j] = '*';
            } else {
                matriz2[i][j] = ' ';
                // espinhos
                if ((i == 7 && j == 6) || (i == 6 && j == 7) || (i == 7 && j == 8) || (i == 1 && j == 9) || (i == 1 && j == 11) || (i == 1 && j == 13)) {
                    matriz2[i][j] = '#';
                }
                if ((i == 26 && j == 3) || (i == 26 && j == 4) || (i == 2 && j == 15) || (i == 1 && j == 16) || (i == 2 && j == 16) || (i == 2 && j == 13)) {
                    matriz2[i][j] = '#';
                }
                // labirinto
                if ((i == 14 && j == 8) || (i == 13 && j == 8) || (i == 13 && j == 10)) {
                    matriz2[i][j] = '#';
                }
                if ((i == 14 && j == 8) || (i == 14 && j == 9) || (i == 14 && j == 10)) {
                    matriz2[i][j] = '#';
                }
                if (i == 14 && j == 9) {
                    matriz2[i][j] = '#';
                }
            }
        }
    }

    system("clear || cls");
    printf("\n\n\n\n\n\n\n\n");
    for (i = 0; i < 20; i++) {
        printf("\t\t\t\t\t\t\t");
        for (j = 0; j < 20; j++) {
            printf(" ");
            printf("%c", matriz2[i][j]);
        }
        printf("\n");
    }
}

// Inimigo V - Movimento2
void XMove2(int x2, int y2, int *XX2, int *XY2) {
    // Calcula a diferença entre as posições do inimigo e do jogador
    int diffX = x2 - *XX2;
    int diffY = y2 - *XY2;

    // Move o inimigo em direção ao jogador
    if (abs(diffX) > abs(diffY)) {
        if (diffX > 0 && *XX2 < 18) // Move para a direita
            (*XX2)++;
        else if (diffX < 0 && *XX2 > 1) // Move para a esquerda
            (*XX2)--;
    } else {
        if (diffY > 0 && *XY2 < 18) // Move para baixo
            (*XY2)++;
        else if (diffY < 0 && *XY2 > 1) // Move para cima
            (*XY2)--;
    }
}

