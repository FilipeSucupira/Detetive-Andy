  void Jogo() //Funcao das Fases
{
	while(fim1==0) //fase1
	{	
		
		mapa1(matriz1,x,y,chave1,porta1,XY,XX);
	   	
		movimentacao1();	
    	
	}
	
		if(vidas==0){
		return;
	}
	
	while(fim2==0) //fase2
	{
		mapa2(matriz2,x2,y2,chave2,porta2,botao2,XY2,XX2,espinho2);

		movimentacao2();
	}
	
	if(vidas==0){
		return;
	}
	
	while(fim3==0) //dinamica da fase3
	{
		mapa3(matriz3,x3,y3,chave3,porta3,botao3,XY3,XX3,espinho2);

		movimentacao3();
	}
	
	if(vidas==0){
		return;
	}
	
			system("cls");
		system("color 0E");
		printf("\n\n\n\n\n\n\n");
        printf("\t\t\t\t\t\t+-----------------------------------------------+\n");
        printf("\t\t\t\t\t\t PARABENS VOCE CONSEGUIU ESCAPAR DO COVIL DO VEX!\n");
        printf("\t\t\t\t\t\t+-----------------------------------------------+\n");
system("pause");

}


	system("cls");//Pular Historia
        	system("color 0B");
        	char ph;
    printf("\n\n\n\t\t\t\t\tDeseja pular a historia? (s/n): ");
    ph = getch();

    if (ph == 's') {
        Jogo(); // Inicia o jogo diretamente
    } else{
	
        	system("cls");
			char abrir[] = "\n\n\n\n\n\n\n\n\t\t...Anotando Informacoes do Caso...Entrando no Veiculo...Indo ate o local informado...Iniciando a Investigacao... ";
			
			int a;
		    for (a = 0; abrir[a] != '\0'; a++) {
		        printf("%c", abrir[a]);
		        fflush(stdout);
		        usleep(20000);
		    }
		     Sleep(5000);
		    system("cls");
			Beep(700,700); 
			historinha();
			Jogo();		
	}
	}
	


