void mapa1(char matriz1[10][10],int x, int y, char chave1, char porta1, int XY, int XX) //Funcao Primeira Fase
{
	int i,j;

	for(i = 0; i < 10; i++) 
	{
		for(j = 0; j < 10; j++) 
		{
			if (i==XY && j==XX ) 
			{
				matriz1[i][j]='X';
			}
			else 
			{
				if(i==y && j==x) 
				{
					matriz1[i][j]='&';
				}
				else 
				{
					if(i==0 && j==5) 
					{
						matriz1[i][j]=porta1;
					}
					else 
					{
						if (i==7 && j==7) 
						{
							matriz1[i][j]=chave1;
						}
						else 
						{

							if(i==0 || i==9) 
							{
								matriz1[i][j]='*';
								printf("\n");
							}
							else 
							{
								if(j==0 || j==9) 
								{
									matriz1[i][j]='*';
								}
								else 
								{
									matriz1[i][j]=' ';
								}
							}
						}
					}
				}
			}
		}
	}
	system("clear || cls");
	printf("\n\n\n\n\n\n\n\n");
	for(i = 0; i < 10; i++) 
	{
		printf("\t\t\t\t\t\t\t");
		for(j = 0; j < 10; j++) 
		{
			printf(" ");
			printf("%c", matriz1[i][j]);
		}
		printf("\n");
	}
}

//Inimigo X - Movimento1
void XMove1() 
{
	int X1;
	srand(time(NULL));
	X1 = 1 + (rand() % 4);
	
	switch (X1) 
	{
		case 1:
			if(XY==1) 
			{} 
			else 
			{
				XY--;
			}
			break;
		case 2:
			if(XY==8) 
			{} 
			else 
			{
				XY++;
			}
			break;
		case 3:
			if(XX==1) 
			{} 
			else 
			{
				XX--;
			}
			break;
		case 4:
			if(XX==8) 
			{} 
			else 
			{
				XX++;
			}
			break;
	}
}

