                        printf("\n\t\t\t\t\t\t Vex Vendetta: Esta machucado demais para correr Detetive UHAHAHA!");
                        printf("\n\n");
                        printf("\n\t\t\t\t\t\t Precione qualquer tecla para continuar...");
								system("pause>null");
                        fim2 = 1;
                        break;
                    } else {
                    }
                }
            }
            break;
        case 'i':
            if (x2 == 9 && y2 == 13) {
                chave2 = '@';
                botao2 = ' ';
            } else {
                if (x2 == 7 && y2 == 7 && chave2 == '@') {
                    printf("\n\n\n");
                    Sleep(20);
                    printf("\t\t\t\t\t\tConsegui a chave!\n");
                    Sleep(900);
                    system("cls");
                    system("color 0F");
                    porta2 = '=';
                    chave2 = ' ';
                }
                break;
            }
        default:
            break;
    }
}



//Terceira Fase  
void mapa3(char matriz3[40][40], int x3, int y3, char chave3, char porta3, char botao3, int XY3, int XX3, char espinho2) {
    system("color 0D");
    int i, j;

    for (i = 0; i < 40; i++) {
        for (j = 0; j < 40; j++) {
            if (i == XY3 && j == XX3) {
                matriz3[i][j] = 'V';
            } else if (i == y3 && j == x3) {
                matriz3[i][j] = '&';
            } else if (i == 0 && j == 15) {
                matriz3[i][j] = porta3;
            } else if (i == 13 && j == 9) {
                matriz3[i][j] = botao3;
            } else if (i == 7 && j == 7) {
                matriz3[i][j] = chave3;
            } else if (i == 35 && j == 35) { // Adiciona teleporte no mapa
                matriz3[i][j] = '>';
            } else if (i == 0 || i == 39) {
                matriz3[i][j] = '*';
                printf("\n");
            } else if (j == 0 || j == 39) {
                matriz3[i][j] = '*';
            } else {
                matriz3[i][j] = ' ';
                // espinhos
                if ((i == 1 && j == 2) || (i == 2 && j == 2) || (i == 3 && j == 2) || (i == 4 && j == 2) || (i == 1 && j == 4) || (i == 2 && j == 4) || (i == 3 && j == 4) || (i == 4 && j == 4)) {
                    matriz3[i][j] = '#';
                }
                if ((i == 26 && j == 3) || (i == 26 && j == 4) || (i == 26 && j == 5) || (i == 2 && j == 7) || (i == 2 && j == 7) || (i == 2 && j == 13)) {
                    matriz3[i][j] = '#';
                }
                // labirinto
                if ((i == 27 && j == 32) || (i == 28 && j == 32) || (i == 29 && j == 32) || (i == 30 && j == 32) || (i == 31 && j == 32) || (i == 32 && j == 32) || (i == 33 && j == 32) || (i == 34 && j == 32) || (i == 35 && j == 32) || (i == 36 && j == 32)) {
                    matriz3[i][j] = '#';
                }
                if ((i == 27 && j == 34) || (i == 28 && j == 34) || (i == 29 && j == 34) || (i == 30 && j == 34) || (i == 31 && j == 34) || (i == 32 && j == 34) || (i == 33 && j == 34) || (i == 34 && j == 34)) {
                    matriz3[i][j] = '#';
                }
                if (i == 36 && j == 33) {
                    matriz3[i][j] = '#';
                }
                if ((i == 34 && j == 35) || (i == 34 && j == 36) || (i == 34 && j == 37) || (i == 34 && j == 38) || (i == 36 && j == 33) || (i == 36 && j == 34) || (i == 36 && j == 35) || (i == 36 && j == 36) || (i == 36 && j == 37) || (i == 36 && j == 38)) {
                    matriz3[i][j] = '#';
                }
                
            }
        }
    }

    system("clear || cls");
    printf("\n\n");
    for (i = 0; i < 40; i++) {
        printf("\t\t\t\t");
        for (j = 0; j < 40; j++) {
            printf(" ");
            printf("%c", matriz3[i][j]);
        }
        printf("\n");
    }
}

// Inimigo V - Movimento3
void XMove3(int x3, int y3, int *XX3, int *XY3) {
    // Calcula a diferença entre as posições do inimigo e do jogador
    int diffX = x3 - *XX3;
    int diffY = y3 - *XY3;

    // Move o inimigo em direção ao jogador
    if (abs(diffX) > abs(diffY)) {
        if (diffX > 0 && *XX3 < 38) // Move para a direita
            (*XX3)++;
        else if (diffX < 0 && *XX3 > 1) // Move para a esquerda
            (*XX3)--;
    } else {
        if (diffY > 0 && *XY3 < 38) // Move para baixo
            (*XY3)++;
        else if (diffY < 0 && *XY3 > 1) // Move para cima
            (*XY3)--;
    }
}

